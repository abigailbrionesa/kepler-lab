generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Planet {
  id                           Int     @id @default(autoincrement())
  name                         String
  mass_kg                      Float?
  diameter_km                  Float?
  radius_km                    Float?
  density_kg_m3                Float?
  gravity_m_s2                 Float?
  escape_velocity_km_s         Float?
  rotation_period_hours        Float?
  length_of_day_hours          Float?
  distance_from_sun_km         Float?
  distance_from_sun_au         Float?
  perihelion_km                Float?
  perihelion_au                Float?
  aphelion_km                  Float?
  aphelion_au                  Float?
  period_days                  Float?
  velocity_km_s                Float?
  inclination_deg              Float?
  inclination_rad              Float?
  eccentricity                 Float?
  obliquity_to_orbit_deg       Float?
  obliquity_to_orbit_rad       Float?
  mean_temperature_c           Float?
  longitude_ascending_node_deg Float?
  longitude_ascending_node_rad Float?
  longitude_perihelion_deg     Float?
  longitude_perihelion_rad     Float?
  mean_longitude_deg           Float?
  mean_longitude_rad           Float?
  mean_anomaly_deg             Float?
  mean_anomaly_rad             Float?
  number_of_moons              Int?
  epoch                        String?
  color                        String?
  index                        Int?
}
