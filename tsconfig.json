{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/3d/objects/planet_models/Earth.tsx",
    "components/3d/objects/planet_models/Jupiter.tsx",
    "components/3d/objects/planet_models/Mars.tsx",
    "components/3d/objects/planet_models/Mercury.tsx",
    "components/3d/objects/planet_models/Neptune.tsx",
    "components/3d/objects/planet_models/Saturn.tsx",
    "components/3d/objects/planet_models/Uranus.tsx",
    "components/3d/objects/planet_models/Venus.tsx"
  ],
  "exclude": ["node_modules"]
}
